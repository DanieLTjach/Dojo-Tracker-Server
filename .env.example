# Example Environment Configuration
# Copy this file to .env and update the values as needed

NODE_ENV=development # or production
PORT=3000
DB_PATH=./db/data/data.db

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=7d

# Authentication settings
AUTH_INIT_DATA_VALIDITY_SECONDS=3600

FRONTEND_URL=http://localhost:3000

# Telegram
BOT_TOKEN=your_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id_here
RATING_CHAT_ID=your_rating_chat_id_here
RATING_TOPIC_ID=your_rating_topic_id_here

# SSH Configuration (for database sync)
SSH_HOST=your-server.com
SSH_USERNAME=user
SSH_PORT=22
REMOTE_DB_PATH=~/app/db/data/dojo.db
REMOTE_BACKUP_DIR=~/app/db/backups
LOCAL_DB_NAME=dojo.db
