  "scripts": {
    "start": "npx ts-node src/index.ts",
    "dev": "nodemon --ext \"js,ts,json\" src/index.ts",
    "test": "rm -f db/data/test.db* 2>/dev/null || true; DB_PATH=./db/data/test.db NODE_OPTIONS=--experimental-vm-modules jest --no-cache --runInBand",
